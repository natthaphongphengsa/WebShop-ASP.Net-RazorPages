@page
@model WebbShop.Pages.Account.RegisterModel
@{
}
<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-6">
            <h1>Register</h1>
            <span class="text-danger">@Html.ValidationMessage("Error")</span>
            <form method="post">
                <div class="form-group">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        <input asp-for="EmailAddress" class="form-control" placeholder="Email-Address" />
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Phone-number</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Phone-number" />
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">ConfirmPassword</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmpassword" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-light">Create account</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@page
@model WebbShop.Pages.Account.RegisterModel
@{
}
<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-6">
            <h1>Register</h1>
            <form method="post">
                <div class="form-group">
                    <div class="mb-3">
                        <span asp-validation-for="Registermodel.EmailAddress" class="text-danger"></span>
                        <input asp-for="Registermodel.EmailAddress" class="form-control" placeholder="Email-Address" />
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Registermodel.Password" class="text-danger"></span>
                        <input asp-for="Registermodel.Password" class="form-control" placeholder="Password" />
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Registermodel.ConfirmPassword" class="text-danger"></span>
                        <input asp-for="Registermodel.ConfirmPassword" class="form-control" placeholder="Confirmpassword" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-light">Create account</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>